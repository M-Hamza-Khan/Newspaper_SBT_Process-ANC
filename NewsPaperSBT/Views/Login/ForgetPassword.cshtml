
@{
    ViewBag.Title = "ANC Vendor Connect - forgot Password";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .form-gap {
        padding-top: 70px;
    }

    body > .row {
        margin: 0;
    }

    .col-sm-12.p-0 hr {
        display: none;
    }

    .footer {
        position: fixed;
        border-top: 1px solid #dcdcdc;
        padding-top: 12px;
        width: 100%;
        left: 0;
        bottom: 0;
    }
</style>
@{

    Html.RenderPartial("_PartialViewHeader");

}
<div class="form-gap"></div>
<div class="container" style="justify-content:center">
    <div class="row">
        <div class="col-lg-4 col-md-6 m-auto">
            <div class="panel panel-default">
                <div class="panel-body">
                    <div class="text-center">
                        <h3><i class="fa fa-lock fa-4x"></i></h3>
                        <h2 class="text-center">Forgot Password?</h2>
                        <p>You can reset your password here.</p>
                        <div class="panel-body">

                            <div class="form-group">
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="glyphicon glyphicon-envelope color-blue"></i></span>
                                    <input id="email" name="email" placeholder="email address" class="form-control" type="email">
                                </div>
                            </div>
                            <div class="form-group">
                                <input name="recover-submit"  data-parsley-trigger="change" id="recover-submit" class="btn btn-lg btn-primary btn-block" value="Reset Password" type="button" required="">
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@{
    Html.RenderPartial("_PartialViewFooter");

}




@section FooterScripts{
<script src="~/scripts/PageJS/Login.js"></script>
}
